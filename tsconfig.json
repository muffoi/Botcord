{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        
        "noImplicitAny": true,
        "strict": true,
        "skipLibCheck": true,
        "noEmitOnError": true,
        
        "removeComments": true,
        "target": "ESNext",

        "typeRoots": ["./node_modules/@types"]
    },

    "include": [
        "src/**/*",
        "./main.ts"
    ]
}
